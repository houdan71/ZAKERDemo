<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.lanou3g.newproject.MainActivity">
     <include
         layout="@layout/include"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         />

   <FrameLayout
       android:id="@+id/frame_layout"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"/>
       <RadioGroup
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="horizontal">
           <RadioButton
               android:id="@+id/radio_read"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:button="@null"
              android:background="@mipmap/icon_newboxview_boxview_tab_night"/>
           <RadioButton
               android:id="@+id/redio_hot"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:button="@null"
               android:background="@mipmap/icon_newboxview_hotdaily_tab_night"/>
           <RadioButton
               android:id="@+id/radio_play"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:button="@null"
               android:background="@mipmap/icon_newboxview_life_tab_night"
               />
           <RadioButton
               android:id="@+id/radio_community"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:button="@null"
               android:background="@mipmap/icon_topic_tab_night"/>
       </RadioGroup>

</LinearLayout>
