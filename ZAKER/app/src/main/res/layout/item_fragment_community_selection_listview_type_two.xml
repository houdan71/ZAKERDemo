<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:id="@+id/item_fragment_community_selection_listView_type_two_linearLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_fragment_community_selection_listView_type_two_img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:id="@+id/item_fragment_community_selection_listView_type_two_linearLayout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_fragment_community_selection_listView_type_two_img_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_fragment_community_selection_listView_type_two_textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="该看书听摇滚"
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:id="@+id/item_fragment_community_selection_listView_type_two_textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textSize="@dimen/ten_sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_fragment_community_selection_listView_type_two_img_user_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_fragment_community_selection_listView_type_two_linearLayout_name"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/item_fragment_community_selection_listView_textView_type_two_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="电影圈"
            android:textSize="@dimen/ten_sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_fragment_community_selection_listView_textView_type_two_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="看书的电影分享"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >

        <ImageView
            android:id="@+id/item_fragment_community_selection_listView_type_two_img_big_picture_first"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/item_fragment_community_selection_listView_type_two_img_big_picture_second"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_fragment_community_selection_listView_type_two_img_hot_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_fragment_community_selection_listView_type_two_textView_hot_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6400"
                android:textSize="@dimen/ten_sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_fragment_community_selection_listView_type_two_img_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_fragment_community_selection_listView_type_two_textView_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                android:textSize="@dimen/ten_sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_fragment_community_selection_listView_type_two_img_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_fragment_community_selection_listView_type_two_textView_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27"
                android:textSize="@dimen/ten_sp"/>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>