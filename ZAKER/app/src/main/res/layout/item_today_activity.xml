        <!--android:numColumns="2"/>-->

    <LinearLayout
 android:id="@+id/linear_top"
    android:layout_below="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/onehundred_dp"
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_top_left"
            android:layout_width="@dimen/zero"

            android:layout_height="@dimen/onehundred_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_today_title"
                android:layout_width="match_parent"

                android:textStyle="bold"
                android:textSize="@dimen/fifteen_five_dp"
                android:layout_height="@dimen/fifty_dp"/>

            <TextView
                android:id="@+id/text_today_name"
                android:layout_width="match_parent"

                android:textSize="@dimen/tendp"
                android:layout_height="@dimen/thrity_dp"/>
        </LinearLayout>
    <LinearLayout
    android:id="@+id/linear_top_right"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/onehundred_dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
    android:id="@+id/text_today_titlee"
    android:layout_width="match_parent"

    android:textStyle="bold"
    android:textSize="@dimen/fifteen_five_dp"
    android:layout_height="@dimen/fifty_dp"/>

    <TextView
    android:id="@+id/text_today_namee"
    android:layout_width="match_parent"

    android:textSize="@dimen/tendp"
    android:layout_height="@dimen/thrity_dp"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_top_below"
        android:layout_below="@+id/linear_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/onehundred_dp"
    android:orientation="horizontal">

    <LinearLayout
    android:id="@+id/linear_below_left"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/onehundred_dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
    android:id="@+id/text_today_title_bottom"
    android:layout_width="match_parent"
    android:textSize="@dimen/fifteen_five_dp"
    android:textStyle="bold"
    android:layout_height="@dimen/fifty_dp"/>

    <TextView
    android:id="@+id/text_today_name_bottom"
    android:layout_width="match_parent"
    android:textSize="@dimen/tendp"

    android:layout_height="@dimen/thrity_dp"/>
    </LinearLayout>

    <LinearLayout
    android:id="@+id/linear_below_right"
    android:layout_width="@dimen/zero"
    android:layout_height="@dimen/onehundred_dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
    android:id="@+id/text_today_titlee_bottom"
    android:layout_width="match_parent"
    android:textSize="@dimen/fifteen_five_dp"
    android:textStyle="bold"
    android:layout_height="@dimen/fifty_dp"/>

    <TextView
    android:id="@+id/text_today_namee_bottom"
    android:layout_width="match_parent"
    android:textSize="@dimen/tendp"

    android:layout_height="@dimen/thrity_dp"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/linear_below"
        android:layout_below="@+id/linear_top_below"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onehundred_dp"

        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/tendp">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:textSize="@dimen/fifteen_five_dp"
            android:textStyle="bold"
            />
        <TextView

            android:id="@+id/text_tody_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thrity_dp"
            android:textSize="@dimen/tendp"
            />
    </LinearLayout>


</RelativeLayout>